<%- include('header.ejs') -%>
<div class="container">   
    <h1>Artists</h1>
    <a href="/artists/create" class="btn btn-primary">Create New</a>
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Name</th>
                <th scope="col">Birth Year</th>
                <th scope="col">Country</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            <% artists.forEach(artist => { %>
                <tr>
                    <td><%= artist.id %></td>
                    <td><%= artist.name %></td>
                    <td><%= artist.birth_year %></td>
                    <td><%= artist.country %></td>
                    <td>
                        <a href="/artists/<%= artist.id %>/update" class="btn btn-primary">Update</a>
                        <form action="/artists/<%= artist.id %>/delete" method="POST" style="display:inline;">
                            <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this artist?');">Delete</button>
                        </form>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</div>
<%- include('footer.ejs') -%>